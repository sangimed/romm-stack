# Copy this file to `.env` and adjust the values.
# Do not commit your `.env` (secrets + local paths).

# --- MariaDB / RoMM (required) ---
MARIADB_ROOT_PASSWORD=change-me
DB_NAME=romm
DB_USER=romm
DB_PASSWD=change-me

# Secret key used by RoMM to sign sessions/JWT (required).
# Use a long random value.
ROMM_AUTH_SECRET_KEY=change-me-very-long-random-string

# --- Ports ---
ROMM_PORT=8080

# --- Bind mounts (required) ---
# Host paths (absolute recommended on Windows) to your folders.
ROMM_LIBRARY_PATH=./data/library
ROMM_ASSETS_PATH=./data/assets
ROMM_CONFIG_PATH=./data/config
SAVES_SYNC_PATH=./data/saves

# --- Multi-disc grouping helper ---
# Comma-separated platform folder names (as created by init-romm).
ROMM_MULTIDISC_PLATFORMS=
# Set to true for dry-run (default), false to move files.
ROMM_MULTIDISC_DRY_RUN=true

# --- Syncthing ---
# Depending on the image, PUID/PGID may be ignored; keep them if you plan to switch images.
PUID=1000
PGID=1000

# --- Deluge + VPN ---
TZ=Europe/Paris
DELUGE_CONFIG_PATH=
DELUGE_DOWNLOADS_PATH=
DELUGE_WEB_PORT=8112
VPN_CONFIG_PATH=
VPN_LOCAL_CIDR=192.168.1.0/24

# --- Metadata providers (optional) ---
IGDB_CLIENT_ID=
IGDB_CLIENT_SECRET=
SCREENSCRAPER_USER=
SCREENSCRAPER_PASSWORD=
RETROACHIEVEMENTS_API_KEY=
STEAMGRIDDB_API_KEY=

# --- Optional ---
HASHEOUS_API_ENABLED=true

# Cloudflare tunnel token
CLOUDFLARE_TOKEN=
